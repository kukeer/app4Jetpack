<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="book"
            type="com.ws.hugs.data.remote.Book" />
        <variable
            name="adapter"
            type="com.ws.hugs.app.book.adapter.BookListAdapter" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/book_img"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="60dp"

            commonImage="@{book.bookImgUrl}"
            android:layout_marginLeft="15dp"
            android:layout_height="100dp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/book_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/book_img"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:text="@{book.bookName}"
            android:maxLines="1"

            android:textSize="16sp"
            android:textColor="@color/qmui_config_color_black" />

        <com.google.android.material.textview.MaterialTextView
            android:gravity="center_vertical"
            android:layout_below="@id/book_name"
            android:id="@+id/author_name"
            android:layout_width="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/book_img"
            android:text="@{book.author}"
            android:maxLines="1"
            android:textSize="12sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/book_introduce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/book_img"
            android:layout_below="@id/author_name"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:maxLines="3"
            android:layout_marginRight="10dp"
            android:text="@{book.introduce}"
            android:textSize="12sp" />


    </RelativeLayout>
</layout>
